<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>PhoneBook on Servlets</display-name>

    <servlet>
        <servlet-name>getContactsServlet</servlet-name>
        <servlet-class>ru.academits.servlet.GetContactsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddContactsServlet</servlet-name>
        <servlet-class>ru.academits.servlet.AddContactServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteContactsServlet</servlet-name>
        <servlet-class>ru.academits.servlet.DeleteContactsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ToggleImportanceServlet</servlet-name>
        <servlet-class>ru.academits.servlet.ToggleContactImportance</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ExportContactsServlet</servlet-name>
        <servlet-class>ru.academits.servlet.ExportContactsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getContactsServlet</servlet-name>
        <url-pattern>/phonebook/get</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddContactsServlet</servlet-name>
        <url-pattern>/phonebook/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteContactsServlet</servlet-name>
        <url-pattern>/phonebook/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ToggleImportanceServlet</servlet-name>
        <url-pattern>/phonebook/toggleimportance</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ExportContactsServlet</servlet-name>
        <url-pattern>/phonebook/export</url-pattern>
    </servlet-mapping>
</web-app>